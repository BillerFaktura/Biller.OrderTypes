        <StackPanel>
            <controls:WatermarkTextBox Watermark="AddressFrameHeight" Text="{Binding SettingsController.AddressFrameHeight}"/>
            <controls:WatermarkTextBox Watermark="AddressFrameWidth" Text="{Binding SettingsController.AddressFrameWidth}"/>
            <controls:WatermarkTextBox Watermark="AddressFrameTop" Text="{Binding SettingsController.AddressFrameTop}"/>
            <controls:WatermarkTextBox Watermark="AddressFrameLeft" Text="{Binding SettingsController.AddressFrameLeft}"/>
            <controls:WatermarkTextBox Watermark="OrderInfoTop" Text="{Binding SettingsController.OrderInfoTop}"/>
            <controls:WatermarkTextBox Watermark="OrderInfoRight" Text="{Binding SettingsController.OrderInfoRight}"/>
            <ItemsControl Height="200" ItemsSource="{Binding SettingsController.ArticleListColumns}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" GotFocus="StackPanel_GotFocus">
                            <TextBox Text="{Binding Header}" Width="{Binding ElementName=GridSpan3Margin, Path=ActualWidth}"/>
                            <ComboBox SelectedItem="{Binding Content}" ItemsSource="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}, Path=DataContext.AllowedArticleDataFields}" Width="{Binding ElementName=GridSpan3Margin, Path=ActualWidth}"/>
                            <ComboBox SelectedIndex="{Binding AlignmentIndex}" Width="{Binding ElementName=GridSpan3Margin, Path=ActualWidth}">
                                <ComboBoxItem Content="Links"/>
                                <ComboBoxItem Content="Zentriert"/>
                                <ComboBoxItem Content="Rechts"/>
                            </ComboBox>
                            <TextBox Text="{Binding ColumnWidth}" Width="{Binding ElementName=GridSpan3Margin, Path=ActualWidth}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <StackPanel Orientation="Horizontal">
                <Button Content="Add" Click="Button_Click_1" Width="{Binding ElementName=GridSpan3Margin, Path=ActualWidth}"/>
                <Button Content="Up" Click="Button_Click_4" Width="{Binding ElementName=GridSpan3Margin, Path=ActualWidth}"/>
                <Button Content="Down" Click="Button_Click_3" Width="{Binding ElementName=GridSpan3Margin, Path=ActualWidth}"/>
                <Button Content="Delete" Click="Button_Click_2" Width="{Binding ElementName=GridSpan3Margin, Path=ActualWidth}"/>
            </StackPanel>
            
        </StackPanel>
