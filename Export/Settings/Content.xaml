        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Style="{StaticResource HeaderStyle}" Text="Layouteinstellungen"/>
                <GroupBox Header="Adresse" FontSize="15">
                    <StackPanel Margin="0,5,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Höhe" Style="{StaticResource ContentStyle}" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200"/>
                            <controls:WatermarkTextBox Watermark="AddressFrameHeight" Text="{Binding SettingsController.AddressFrameHeight, Converter={StaticResource cmConverter}}" SelectTextBeforeSpace="True" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Breite" Style="{StaticResource ContentStyle}" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200"/>
                            <controls:WatermarkTextBox Watermark="AddressFrameWidth" Text="{Binding SettingsController.AddressFrameWidth, Converter={StaticResource cmConverter}}" SelectTextBeforeSpace="True" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Abstand zum Seitenanfang" Style="{StaticResource ContentStyle}" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200"/>
                            <controls:WatermarkTextBox Watermark="AddressFrameTop" Text="{Binding SettingsController.AddressFrameTop, Converter={StaticResource cmConverter}}" SelectTextBeforeSpace="True" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Abstand zum linken Seitenrand" Style="{StaticResource ContentStyle}" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200"/>
                            <controls:WatermarkTextBox Watermark="AddressFrameLeft" Text="{Binding SettingsController.AddressFrameLeft, Converter={StaticResource cmConverter}}" SelectTextBeforeSpace="True" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200" FontSize="13"/>
                        </StackPanel>
                        <CheckBox Content="Absender anzeigen" FontSize="13" IsChecked="{Binding SettingsController.AddressFrameShowSender}"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Auftragsinfo" FontSize="15">
                    <StackPanel Margin="0,5,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Abstand zum Seitenanfang" Style="{StaticResource ContentStyle}" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200"/>
                            <controls:WatermarkTextBox Watermark="OrderInfoTop" Text="{Binding SettingsController.OrderInfoTop, Converter={StaticResource cmConverter}}" SelectTextBeforeSpace="True" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Abstand rechten Seitenrand" Style="{StaticResource ContentStyle}" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200"/>
                            <controls:WatermarkTextBox Watermark="OrderInfoRight" Text="{Binding SettingsController.OrderInfoRight, Converter={StaticResource cmConverter}}" SelectTextBeforeSpace="True" Width="{Binding ElementName=GridSpan5Margin, Path=ActualWidth}" MinWidth="200" FontSize="13"/>
                        </StackPanel>
                        <CheckBox Content="Kundennummer anzeigen" FontSize="13" IsChecked="{Binding SettingsController.OrderInfoShowCustomerID}"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Artikelspalten" FontSize="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" MaxWidth="100"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="0,5,0,0">
                            <ItemsControl ItemsSource="{Binding SettingsController.ArticleListColumns}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" GotFocus="StackPanel_GotFocus" LostFocus="StackPanel_LostFocus">
                                            <TextBox Text="{Binding Header}" Width="{Binding ElementName=GridSpan2Margin, Path=ActualWidth}" Margin="1" FontSize="13"/>
                                            <ComboBox SelectedItem="{Binding Content}" ItemsSource="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}, Path=DataContext.AllowedArticleDataFields}" Width="{Binding ElementName=GridSpan2Margin, Path=ActualWidth}" Margin="1" FontSize="13"/>
                                            <ComboBox SelectedIndex="{Binding AlignmentIndex}" Width="{Binding ElementName=GridSpan2Margin, Path=ActualWidth}" Margin="1" FontSize="13">
                                                <ComboBoxItem Content="Links"/>
                                                <ComboBoxItem Content="Zentriert"/>
                                                <ComboBoxItem Content="Rechts"/>
                                            </ComboBox>
                                            <controls:WatermarkTextBox Text="{Binding ColumnWidth, Converter={StaticResource cmConverter}}" Width="{Binding ElementName=GridSpan2Margin, Path=ActualWidth}" Margin="1" FontSize="13" SelectTextBeforeSpace="True" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0,5,0,0">
                            <controls:Office2013Button Content="Nach oben" Click="Button_Click_4" FontSize="12"/>
                            <controls:Office2013Button Content="Nach unten" Click="Button_Click_3" FontSize="12"/>

                            <controls:Office2013Button Content="Hinzufügen" Click="Button_Click_1" FontSize="12"/>
                            <controls:Office2013Button Content="Entfernen" Click="Button_Click_2" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Fußzeile" FontSize="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" MaxWidth="100"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="0,5,0,0">
                            <ItemsControl ItemsSource="{Binding SettingsController.FooterColumns}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" GotFocus="SP_FooterColumns_GotFocus" LostFocus="SP_FooterColumns_LostFocus">
                                            <TextBox Text="{Binding Value}" Width="{Binding ElementName=GridSpan4Margin, Path=ActualWidth}" Margin="1" FontSize="13" AcceptsReturn="True"/>
                                            <ComboBox SelectedIndex="{Binding AlignmentIndex}" Width="{Binding ElementName=GridSpan2Margin, Path=ActualWidth}" Margin="1" FontSize="13">
                                                <ComboBoxItem Content="Links"/>
                                                <ComboBoxItem Content="Zentriert"/>
                                                <ComboBoxItem Content="Rechts"/>
                                            </ComboBox>
                                            <controls:WatermarkTextBox Text="{Binding ColumnWidth, Converter={StaticResource cmConverter}}" Width="{Binding ElementName=GridSpan2Margin, Path=ActualWidth}" Margin="1" FontSize="13" SelectTextBeforeSpace="True" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0,5,0,0">
                            <controls:Office2013Button Content="Nach oben" Click="ButtonMoveFooterColumnUp" FontSize="12"/>
                            <controls:Office2013Button Content="Nach unten" Click="ButtonMoveFooterColumnDown" FontSize="12"/>

                            <controls:Office2013Button Content="Spalte hinzufügen" Click="ButtonAddFooterColumn" FontSize="12"/>
                            <controls:Office2013Button Content="Spalte entfernen" Click="ButtonRemoveFooterColumn" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
